import math
import random
from statistics import mean

def calcular_area_rectangulo(largo, ancho):
    return largo * ancho

def calcular_circunferencia(radio):
    return 2 * math.pi * radio

def calcular_promedio(lista_numeros):
    return sum(lista_numeros) / len(lista_numeros)

def calcular_promedio_avanzado(lista_numeros):
    return mean(lista_numeros)

def generar_numeros_aleatorios(cantidad, limite):
    return [random.randint(1, limite) for _ in range(cantidad)]

area = calcular_area_rectangulo(5, 3)
print("Área del rectángulo (5 x 3):", area)

circunferencia = calcular_circunferencia(4)
print("Circunferencia de un círculo con radio 4:", circunferencia)

numeros = [10, 20, 30, 40, 50]

promedio_manual = calcular_promedio(numeros)
print("Promedio (manual):", promedio_manual)

promedio_avanzado = calcular_promedio_avanzado(numeros)
print("Promedio (con statistics.mean):", promedio_avanzado)

numeros_aleatorios = generar_numeros_aleatorios(5, 100)
print("Lista de números aleatorios entre 1 y 100:", numeros_aleatorios)